@page
@model Employees_Manager.Pages.Employees.CreateModel
@{
    ViewData["Title"] = "Create Employee";
}

<div class="container">
    <div class="row p-0 m-0">

        <div class="col-12 border p-5 mt-3">
            <form action="/" method="post">
                <div class="form-group">
                    <label for="name">Full Name</label>
                    <input type="text" class="form-control" name="Name" id="name" />
                </div>
                <div class="form-group">
                    <label for="name">Email address</label>
                    <input type="email" class="form-control" name="email" id="email" required />
                </div>
                <div class="form-group">
                    <label for="name">Date of Birth</label>
                    <input type="date" class="form-control" name="dob" id="dob" />
                </div>
                <div class="form-group">
                    <label for="vacation">Vacations</label>
                    <div class="row">
                        <div class="col-4 p-1 text-center">Type</div>
                        <div class="col-4 p-1 text-center">Balance</div>
                        <div class="col-3 p-1 text-center">Used</div>
                        <div class="col-1 text-center"><a>Add</a></div>
                    </div>
                    <div class="row">

                        <div class="col-4 p-1"><input type="text" class="form-control" name="vacation" value="Casual" readonly/></div>
                        <div class="col-4 p-1"><input type="number" class="form-control" name="vacation" value="7" min="0"/></div>
                        <div class="col-3 p-1"><input type="number" class="form-control" name="vacation" value="0" min="0"/></div>
                        <div class="col-1"></div>
                    </div>
                    <div class="row">

                        <div class="col-4 p-1"><input type="text" class="form-control" name="vacation" value="Schedule" readonly/></div>
                        <div class="col-4 p-1"><input type="number" class="form-control" name="vacation" value="14" min="0"/></div>
                        <div class="col-3 p-1"><input type="number" class="form-control" name="vacation" value="0" min="0"/></div>
                        <div class="col-1"></div>
                    </div>



                </div>
                <button type="submit" class="btn btn-primary">Create</button>
            </form>
        </div>
    </div>
</div>

